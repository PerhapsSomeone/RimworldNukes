<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- To add a research tab, make a new ResearchTabDef here and then set the <tab> field of your research project to match it -->
	
	<ResearchTabDef>
		<defName>NuclearWeaponsResearch</defName>
		<label>Nuclear Weapons</label>
	</ResearchTabDef>

	<ResearchProjectDef>
    	<defName>SmallNuclearWeaponsResearch</defName>
    	<label>small nukes</label>
    	<tab>NuclearWeaponsResearch</tab>
    	<description>Construct small nuclear mortar shells.</description>
    	<baseCost>800</baseCost>
    	<techLevel>Industrial</techLevel>
    	<prerequisites>
     		<li>Electricity</li>
    	</prerequisites>
    	<researchViewX>0.2</researchViewX>
    	<researchViewY>2.5</researchViewY>
  	</ResearchProjectDef>

  	<ResearchProjectDef>
    	<defName>DirtyNuclearWeaponsResearch</defName>
